        sheet.Rows.Removed += (sender, args) =>
        {
            // Turn off history
            sheet.BatchUpdates();
            sheet.Commands.PauseHistory();

            if (sheet.NumRows == 0)
            {
                sheet.Rows.InsertAt(0);
            }

            // Turn off history
            sheet.EndBatchUpdates();
            sheet.Commands.ResumeHistory();
        };

        // Turn on history
        sheet.EndBatchUpdates();
        sheet.Commands.ResumeHistory();
    }
